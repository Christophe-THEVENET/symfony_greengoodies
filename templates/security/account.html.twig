{# templates/account/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Mon compte
{% endblock %}

{% block body %}
	<section class="cart account">
		<div class="cart__container">
			<div class="cart__wrapper">

                <h1 class="cart__title">Mon compte</h1>

                <div class="cart__item-wrapper">

                    {% include "./_partials/_account/_user-info.html.twig" %}

                    <div class="cart__item profil__item">
                    
                        <div class="profil__item-left">

                            <h5>Mon profil</h5>
                            <p class="cart__item-quantity">Modifier vos informations personnelles</p>
                            <h5>Actions du compte</h5>

                            <div>
                                <a href="{{ path('app_logout') }}" class="btn btn-outline">
                                <i class="fas fa-sign-out-alt"></i> Se déconnecter
                                </a>
                                <a href="#" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?')">
                                <i class="fas fa-trash"></i> Supprimer mon compte
                                </a>
                            </div>
                        </div>

                        <div class="profil__item-right">

                           
                               
                        </div>


            </div>
		</div>
	</section>
    
{% endblock %}
