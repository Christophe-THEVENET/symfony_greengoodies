            <span class="header__container__burger-line"></span>
            <span class="header__container__burger-line"></span>
            <span class="header__container__burger-line"></span>
        </button>
        
        <!-- Navigation mobile -->
        <nav class="header__container__nav-mobile" data-header-target="mobileMenu">
