<article class="card-product">
    <div class="card-product__image">
        <img src="{{ asset('img/products/' ~ product.imageFilename) }}" 
             alt="{{ product.shortDescription }}">
    </div>
    <div class="card-product__content">
        <h3 class="card-product__content-title f-card-product-title">{{ product.name }}</h3>
        <p class="card-product__content-description f-card-product-text ">{{ product.shortDescription }}</p>
        <p class="card-product__content-price f-card-product-price">{{ product.price|number_format(2, ',', ' ') }}â‚¬</p>
        <a href="{{ path('app_product_show', { id: product.id }) }}" 
           class="card-product__link btn">
            <span class="link">Voir le produit</span>
        </a>
    </div>
</article>